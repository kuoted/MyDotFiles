{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "presentation": "group",
  "configurations": [
    {
      // Example launch of a python file
      "name": "Python: Current File (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "autoReload": {
        "enable": true
      }
    },
    {
      //launch debug via SSH on remote,
      "name": "(gdb) Launch cupcake which located in Docker",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/04_ccu/02_x86_emulator/PLATFORM_Sample/build/modules/cm_sample/someip_method_kpoll_sample/client/someip_method_kpoll_client_sample",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
      ],
      "envFile": "${workspaceFolder}/.vscode/env_launch_inDocker"
    },
  ],
}